@model Hotel.Core.Models.RoomViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    ViewData["Title"] = "EditRoom";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" rel="stylesheet">

<h1>Edit Room</h1>
<form method="post">

    <div class="form-group">
        <label asp-for="HotelId" class="mr-2">Hotel Number: <input asp-for="HotelId" class="form-control" readonly /></label>
        
    </div>

    <div class="form-group">
        <label asp-for="Id">id:  <input asp-for="Id" class="form-control" hidden/></label>
    </div>

    <div class="form-group">
        <label asp-for="RoomId">Room Number: <input asp-for="RoomId" class="form-control" /></label>
        
    </div>

    <div class="form-group">
        <label asp-for="Price">Price: <input asp-for="Price" class="form-control" /></label>
        
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomTypeId">Type</label>
        <div class="combobox-container">
            <select asp-for="RoomTypeId" class="combobox-select">
                <option value="">Select a Room Type</option>
                @foreach (var roomType in Model.roomTypes)
                {
                    <option value="@roomType.Id">@roomType.Type</option>
                }
           </select>
        </div>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsCleaned">Is Cleaned</label>
        <input asp-for="IsCleaned" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsCleaned" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsReserved">Is Reserved</label>
        <input asp-for="IsReserved" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsReserved" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsFree">Is Free</label>
        <input asp-for="IsFree" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsFree" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <div>
        <p>

        </p>
    </div>
      
           
</form>
<br />
<form>
    <button id="return" class="btn btn-primary" asp-controller="Room" asp-action="RoomsAndBookingsInHotel">Back to Rooms</button>
</form>
<br />
<form>
    <a id="deleteBtn" class="btn btn-danger delete" data-id="@Model.Id" data-delete-url="/Room/Delete/@Model.Id"><i class="bi bi-trash"></i></a>
</form>
<br />
<form id="create">
    <a asp-controller="Room" asp-action="RoomTypes" class="btn btn-primary">Types</a>
</form>

@section Scripts {
    <script src="~/lib/personal-scripts/DeleteModalDialog.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
}
